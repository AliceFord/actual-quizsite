extends template

block extraScripts
    link(rel='stylesheet' href='/stylesheets/signin.css')

block content
    form.form-signin(style='text-align: center!important;' method='post')
        h1.h3.mb-3.font-weight-normal Please sign in
        label.sr-only(for='inputEmail') Email address
        input.form-control#inputEmail(type='email' placeholder='Email address' name='email' required autofocus)
        label.sr-only(for='inputPassword') Password
        input.form-control#inputPassword(type='password' placeholder='Password' name='password' required)
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
        br
        a(href='/sign-up')
            button.btn.btn-lg.btn-outline-success.btn-block(type='button') Sign up
